# ============================================
# AWD Logger - Environment Configuration
# ============================================

# --------------------------------------------
# Discord Bot Configuration (Required)
# --------------------------------------------

# Your Discord bot token (from Discord Developer Portal)
# Get one at: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID (Client ID)
DISCORD_APPLICATION_ID=1234567890123456789

# --------------------------------------------
# HTTP Server Configuration
# --------------------------------------------

# Host to bind the HTTP server (0.0.0.0 for all interfaces)
HTTP_HOST=0.0.0.0

# Port for the HTTP server
HTTP_PORT=8080

# --------------------------------------------
# Discord Guild Configuration
# --------------------------------------------

# Discord Guild (Server) ID where slash commands will be registered
# Right-click your server name in Discord and "Copy Server ID"
# If not set, slash commands will be registered globally (takes up to 1 hour)
GUILD_ID=1234567890123456789

# --------------------------------------------
# Channel Configuration
# --------------------------------------------

# Name of the category for log channels
LOG_CATEGORY_NAME=ðŸ”¥ AWD Logs

# Name of the channel for blacklist notifications
BLACKLIST_CHANNEL_NAME=ðŸš« blacklist

# --------------------------------------------
# Security Configuration
# --------------------------------------------

# Discord User IDs of administrators (comma-separated)
# These users can manage the whitelist
ADMIN_USER_IDS=1234567890123456789,9876543210987654321

# --------------------------------------------
# Rate Limiting
# --------------------------------------------

# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# --------------------------------------------
# Message Configuration
# --------------------------------------------

# Maximum length of log messages (longer messages will be truncated)
MAX_MESSAGE_LENGTH=4000

# Enable IP geolocation info (not implemented yet)
ENABLE_GEOIP=false

# --------------------------------------------
# Database Configuration
# --------------------------------------------

# SQLite database URL
DATABASE_URL=sqlite://awd_logger.db

# ============================================
# Python Client Configuration (disclog)
# ============================================

# These are used by the Python client library
DISCLOG_HOST=localhost
DISCLOG_PORT=8080
DISCLOG_CHANNEL=general

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minioa.mapper.AnnouncementMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.minioa.entity.Announcement">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="author_id" property="authorId"/>
        <result column="author_nickname" property="authorNickname"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 查询所有公告（关联查询作者昵称） -->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT a.*, u.nickname as author_nickname
        FROM announcements a
        LEFT JOIN users u ON a.author_id = u.id
        ORDER BY a.create_time DESC
    </select>

    <!-- 根据ID查询 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT a.*, u.nickname as author_nickname
        FROM announcements a
        LEFT JOIN users u ON a.author_id = u.id
        WHERE a.id = #{id}
    </select>

    <!-- 插入公告 -->
    <insert id="insert" parameterType="com.minioa.entity.Announcement" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO announcements (title, content, author_id)
        VALUES (#{title}, #{content}, #{authorId})
    </insert>

    <!-- 删除公告 -->
    <delete id="deleteById">
        DELETE FROM announcements WHERE id = #{id}
    </delete>

</mapper>
